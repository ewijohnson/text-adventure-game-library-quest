player = []

class Room:

    def __init__(self, name):
        self.name = name

    def inRoom(self):
        return self.enter

    def entering(self):
        self.enter = True

    def leaving(self):
        self.enter = False

    def getName(self):
        return self.name


def introduction():
    print('This is the introduction!')


def getLocation(place):
    currentLocation = place.getName()
    print(f'You are currently in the {currentLocation}.')

introduction()

Location1 = Room("Entrance")
print('hm')
Location1.entering()
if Location1.inRoom() == True:
    print("This is true.")
else:
    print(".....ugh.")
Location1.leaving()
if Location1.inRoom() == False:
    print('This is correctly False.')
else:
    print(".....ugh #2.")

youAreHere = Location1
getLocation(youAreHere)
print('###################\n')

Location2 = Room("Circulation Area")
youAreHere = Location2
getLocation(youAreHere)

Location3 = Room("Elevator Lobby")
youAreHere = Location3
getLocation(youAreHere)

def move():
    direction = input("Enter a direction using 'wasd': ")
    return direction

movement = (move().lower())
if movement == 'w':
    print('up')
elif movement == 'a':
    print('left')
elif movement == 's':
    print('down')
elif movement == 'd':
    print('right')
else:
    print('uh-oh')


Location1.entering()
movement = (move().lower())
if Location1.inRoom() == True:
    print("okay it's true now")
    if movement == 'w':
        Location1.leaving()
        Location2.entering()
        if Location2.inRoom() == True:
            youAreHere = Location2
            getLocation(youAreHere)
        else:
            print("Line 82 is wrong")
    elif movement == 's':
        Location1.leaving()
        Location3.entering()
        if Location3.inRoom() == True:
            youAreHere = Location3
            getLocation(youAreHere)
        else:
            print("Line 90 is wrong")
else:
    print("Line 74 is wrong")
