                 Location49, Location50, Location51, Location52]

location_count = 0
infile = open('adjacent_rooms_file.txt', 'r')
for location in all_locations:
    line = infile.readline()
    line = line.split()
    line = line[2:]
    line = ' '.join(line)
    line = line.strip('[')
    line = line.strip(']')
    line = line.replace(',', '')
    line = line.split()
    for rooms in line:
        if rooms != 'None':
            rooms = eval(rooms)
            location.add_directions(rooms)
        else:
            location.add_directions(rooms)

infile.close()

introduction()
initialization()
